{
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the policy"
      },
      "allowedValues": ["Deny", "Audit", "Disabled"],
      "defaultValue": "Deny"
    },
    "skuName": {
          "type": "Array",
          "metadata": {
            "description": "List of SKU names for App Service Plans to check.",
            "displayName": "SKU names"
          },
          "defaultValue": ["P3V3", "P3V2","P2V2","P3V2","P3","P2"]
        }
  },
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Web/serverfarms"
        },
        {
          "field": "Microsoft.Web/serverfarms/sku.name",
          "in": "[parameters('skuName')]"
        }
      ]
    },
    "then": {
      "effect": "[parameters('effect')]"
    }
  }
}